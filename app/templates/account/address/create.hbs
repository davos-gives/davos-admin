  <section class="-mt-30 flex-grow">
    <div class="flex flex-wrap w-4/5 mx-auto">
      <h1 class="ml-8 -mt-8 text-white text-xl font-light">My Addresses</h1>
    </div>
    <div class="relative w-3/5 mx-auto mx-auto">
      <img class="absolute pin-r pin-t w-64 z-20 -mt-24 mr-8" src="/img/Donor_Address.png" />
    </div>

    <section class=" w-3/5 mx-auto text-sm pt-8 pb-8 mt-8">
      <div class="w-full pl-8 flex flex-wrap">
        <div class="">
          <p class='text-lg text-white capitalize'>Add a new Address</p>
        </div>
        <div class="mb-4 w-1/2">
          <div class="font-bold text-purple history-dropdown float-right">
          </div>
        </div>
      </div>
    </section>

    <section class="flex flex-wrap w-3/5 w-1 mx-auto bg-white rounded-lg px-14 py-8 shadow">
      <div class="border-b border-grey pb-3 mt-6 w-full">
        <label class="uppercase text-xs text-grey-darker block pl-4">Name</label>
        {{input type="text" class="block mt-2 text-grey-darker font-semibold pl-4 outline-none w-full" placeholder="Home" value=model.name}}
      </div>
      <div class="border-b border-grey pb-3 mt-6 w-7/10">
        <label class="uppercase text-xs text-grey-darker block pl-4">Address</label>
        {{input type="text" class="block mt-2 text-grey-darker font-semibold pl-4 outline-none w-full" placeholder="123 Fake Street" value=model.address_1}}
      </div>
      <div class="w-1/10"></div>
      <div class="border-b border-grey pb-3 mt-6 w-1/5">
        <label class="uppercase text-xs text-grey-darker block pl-4">Apt #</label>
        {{input type="text" class="block mt-2 text-grey-darker font-semibold pl-4 outline-none w-full" placeholder="103" value=model.address_2}}
      </div>

      <div class="border-b border-grey pb-3 mt-6 w-266">
        <label class="uppercase text-xs text-grey-darker block pl-4">City</label>
        {{input type="text" class="block mt-2 text-grey-darker font-semibold pl-4 outline-none w-full" placeholder="Vancouver" value=model.city}}
      </div>
      <div class="w-1/10"></div>
      <div class="border-b border-grey mt-6 w-266">
        <label class="uppercase text-xs text-grey-darker block pl-4">Province</label>
        {{#power-select
          options=provinces
          selected=model.province
          searchEnabled=false
          dropdownClass="frequency-dropdown"
          onchange=(action "updateProvince") as |province|}}
          {{province}}
        {{/power-select}}
      </div>
      <div class="w-1/10"></div>
      <div class="border-b border-grey pb-3 mt-6 w-266">
        <label class="uppercase text-xs text-grey-darker block pl-4">Postal Code</label>
        {{input type="text" class="block mt-2 text-grey-darker font-semibold pl-4 outline-none w-full" placeholder="a0b 1c2" value=model.postal_code}}
      </div>
      <div class="pb-3 mt-6 w-full ml-2">
        {{#checkbox-with-label
          checked=primary
          disabled=disabled
          update=(action (mut primary))
        }}
          <span class="text-sm text-grey-darker ml-2">Make this my preferred address.</span>
        {{/checkbox-with-label}}
      </div>
    </section>
      <section class="flex flex-wrap mx-auto w-3/5 justify-end mt-6">
        <button class="rounded-full bg-purple-buttons text-white font-thin py-2 px-4 rounded-full block z-10 hover:shadow-lg capitalize mr-4" onclick={{action "saveAddress" model}}>
          Save
        </button>
        <button class="rounded-full border border-purple-buttons text-purple-buttons font-thin py-2 px-4 rounded-full block z-10 hover:shadow-lg" onclick={{action "cancel"}}>Cancel</button>
    </section>
  </section>



