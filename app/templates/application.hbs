<!-- Two columns -->
<div class="flex mx-auto font-sans">
  <div class="w-1/7 bg-grey-lightest h-100">
    <div class="logo text-center py-8 font-bold">
      DAVOS
    </div>
    <div class="menu text-left pt-4">
      <ul class="list-reset">
        <li class="py-2 pl-1">
          {{#link-to "index" class="no-underline text-purple font-bold"}}
            <span class="rounded-full h-8 w-8 flex items-center justify-center bg-purple float-left -ml-5 -mt-1"></span>
            <div class="w-48 m-auto pl-8">
              <span class="w-4 text-center pr-6 text-sm">
                {{fa-icon "clipboard"}}
              </span>
              Donations
            </div>
          {{/link-to}}
        </li>
        <li class="py-2 text-grey-menu font-light w-48 m-auto pl-8">
          <span class="w-4 text-center pr-6 pl-1 text-sm">  {{fa-icon "usd"}} </span>
          Account
        </li>
        <li class="py-2 pl-1 text-grey-menu font-light w-48 m-auto pl-8">
          <span class="w-4 text-center pr-6 text-sm">  {{fa-icon "download"}} </span>
          Receipts
        </li>
        <li class="py-2 pl-1 text-grey-menu font-light w-48 m-auto pl-8">
          <span class="w-4 text-center pr-6 text-sm">  {{fa-icon "plane"}} </span>
          Discover
        </li>
      </ul>
    </div>
  </div>
  {{outlet}}
</div>
