<div class="{{if doubleConfirmCancel 'editing-overlay z-30'}}">

  {{#if doubleConfirmCancel}}
    <section class="absolute z-40 flex justify-center">
      {{delete-card
        name=name
        cardType=cardType
        lastFourDigits=lastFourDigits
        expiryYear=expiryYear
        expiryMonth=expiryMonth
        deleteVaultCard=(action "deleteVaultCard")
        undoCancellation=(action "undoCancellation")
        }}
    </section>
  {{/if}}

<div class="{{if doubleConfirmCancel 'relative z-0 hidden'}}">
<section class="flex flex-col w-3/5 w-1 mx-auto bg-white rounded-lg shadow">
  <div class="bg-grey-lightest py-4 px-14 flex flex-wrap items-center">
    <img src="/img/visa.png" class="h-8 w-auto mr-4 opacity-75"><p class="text-grey-dark">{{cardType}} ending in {{lastFourDigits}}</p>
  </div>
  <div class="px-14 py-8 flex flex-wrap">
  <div class="border-b border-grey pb-3 mt-6 w-full">
    <label class="uppercase text-xs text-grey-darker block pl-4">Name</label>
    {{input type="text" class="block mt-2 text-grey-darker font-semibold pl-4 outline-none w-full" placeholder="Home" value=name}}
  </div>
  <div class="border-b border-grey pb-3 mt-6 w-1/5">
    <label class="uppercase text-xs text-grey-darker block pl-4">Expiry Month</label>
    {{input type="text" class="block mt-2 text-grey-darker font-semibold pl-4 outline-none w-full" placeholder="103" value=expiryMonth}}
  </div>

  <div class="w-1/10"></div>
  <div class="border-b border-grey pb-3 mt-6 w-1/5">
    <label class="uppercase text-xs text-grey-darker block pl-4">Expiry Year</label>
    {{input type="text" class="block mt-2 text-grey-darker font-semibold pl-4 outline-none w-full" placeholder="103" value=expiryYear}}
  </div>

  <div class="pb-3 mt-6 w-full ml-2">
    {{#checkbox-with-label
      checked=primary
      disabled=disabled
      update=(action (mut primary))
    }}
      <span class="text-sm text-grey-darker ml-2">Make this my preferred payment method.</span>
    {{/checkbox-with-label}}
  </div>
  </div>
</section>
  <section class="flex flex-wrap mx-auto w-3/5 justify-between mt-6 items-center">
    <p class="pl-16 text-purple text-sm cursor-pointer" {{action "doubleConfirmCancel"}}>Delete this payment method</p>
    <div class="flex flex-wrap">
      <button class="rounded-full bg-purple-buttons text-white font-thin py-2 px-4 rounded-full block z-10 hover:shadow-lg capitalize mr-4" onclick={{action "saveVaultCard" model}}>
        Save
      </button>
      <button class="rounded-full border border-purple-buttons text-purple-buttons font-thin py-2 px-4 rounded-full block z-10 hover:shadow-lg" onclick={{action "onCancel"}}>Cancel</button>
  </div>
</section>
</div>

</div>
