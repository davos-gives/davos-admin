<form onsubmit={{action "reset"}} class="{{if hasError "errors"}}">

  <div class="py-8 w-full">
    <div class="email-field">
      {{fl-input type="password" placeholder="Password" value=password}}
    </div>
    <div class="password-field mt-2">
      {{fl-input type="password" placeholder="Confirm Password" value=passwordConfirmation}}
    </div>
  </div>

  <div class="form-footer flex justify-between content-center mb-8 pb-6 mt-8 pt-8">
    <div></div>
    <button type="submit" name="button" class="rounded-full bg-purple-buttons text-white font-thin py-2 px-4 rounded-full text-center pb-3 hover:shadow-lg">Reset password <img src="/img/icons/ChevronWhite.svg" class="w-3 rotate-270"></button>
  </div>
</form>
