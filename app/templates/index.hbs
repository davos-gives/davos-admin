<div class="w-3/4">
  <section class="flex bg-grey-darkest h-64">
    <div class="flex-1 p-8 ml-8">
      <p class="p-1 text-lg text-white">Welcome back, {{model.first}}!</p>
      <p class="text-xl py-4 text-white">This month you're donating <strong>{{format-currency model.donorRecurringTotal}}</strong> <span class="uppercase text-xs">cad</span></p>
    </div>
    <div class="flex-1 text-right">
      <nav class="flex items-center justify-between flex-wrap p-6">
        <div class="w-full block flex-grow text-white">
          <div>
            <a class="inline-block mt-4 mr-4 text-white no-underline" href="">
              {{fa-icon "search"}}
            </a>
            <a class="inline-block mt-4 mr-4 text-white no-underline" href="">
              {{fa-icon "bell"}}
            </a>
            <a class="inline-block mt-4 mr-1 text-white no-underline" href="">
              <span class="rounded-full h-6 w-6 flex items-center justify-center bg-white">a</span>
            </a>
            <a class="inline-block mt-4 text-white no-underline" href="">
              {{model.first}}
            </a>
          </div>
        </div>
      </nav>
    </div>
  </section>
  <section class="flex flex-wrap w-3/4 px-8 ml-8 -mt-8">
    <div class="w-1/2 -mt-8">
      <p class='text-lg text-white'>Active Donations</p>
    </div>
    <div class="w-1/2 text-right -mt-8">
      <button class="bg-grey-dark text-white py-2 px-4 rounded-full">View All</button>
    </div>
  </section>

  <section class="flex flex-wrap content-start w-3/4 px-2 ml-8 pt-8 mb-8">

    {{#each model.relationships as |relationship|}}
      {{#each relationship.recurrings as |gift|}}
        {{#link-to 'relationship' relationship.id class='no-underline text-black'}}
          <div class="w-96 rounded-lg overflow-hidden shadow-md -mt-4 mx-2 mb-8 cursor-pointer">
            <div class="image w-full h-32 bg-grey-lightest">
            </div>
            <div class="px-6 py-4">
              <div class="pb-8 border-grey-light border-solid border-b-2">
                <p class="font-bold mt-4 mb-2 capitalize">
                  {{gift.campaign.organization.name}}
                </p>
                <p class="font-light">
                  {{gift.campaign.description}}
                </p>
              </div>
              <div class="mt-4 flex">
                <p class="text-lg font-bold w-1/2">
                  {{format-currency gift.amount}}
                </p>
                <span class="w-1/2 text-right capitalize">
                  {{gift.frequency}}
                </span>
              </div>
            </div>
          </div>
      {{/link-to}}
      {{/each}}
    {{/each}}
  </section>

  <section class="flex flex-wrap w-3/4 px-8 ml-8 mt-8">
    <div class="w-1/2">
      <p class='text-lg'>Past Donations</p>
    </div>
    <div class="w-1/2 text-right">
      <button class="bg-grey-dark text-white py-2 px-4 rounded-full">View All</button>
    </div>
  </section>

  <section class="flex flex-wrap content-start w-3/4 px-2 ml-8 pt-8 mb-8">
    <div class="w-40 rounded-lg overflow-hidden shadow-md -mt-4 mx-2 mb-8">
      <div class="image w-full h-40 bg-grey-lightest">
      </div>
    </div>
    <div class="w-40 rounded-lg overflow-hidden shadow-md -mt-4 mx-2 mb-8">
      <div class="image w-full h-40 bg-grey-lightest">
      </div>
    </div>
    <div class="w-40 rounded-lg overflow-hidden shadow-md -mt-4 mx-2 mb-8">
      <div class="image w-full h-40 bg-grey-lightest">
      </div>
    </div>
    <div class="w-40 rounded-lg overflow-hidden shadow-md -mt-4 mx-2 mb-8">
      <div class="image w-full h-40 bg-grey-lightest">
      </div>
    </div>
  </section>

  <section class="flex flex-wrap w-3/4 text-xs text-grey-dark ml-8 border-grey-light border-solid border-t-2 pt-8 pb-8">
    <div class="w-1/2">
      <p>Â©2018 Davos.gives - All rights reserved.</p>
    </div>
    <div class="w-1/2 text-right flex">
      <p class="w-1/3">
        Terms of Use
      </p>
      <p class="w-1/3">
        Privacy Policy
      </p>
      <p class="w-1/3">
        Cookie Policy
      </p>
    </div>
  </section>
</div>
