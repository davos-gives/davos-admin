      <div class="w-2/5 pl-1 mx-auto">
        <span class="rounded-full inline-block h-3 w-3  items-center mx-1 bg-purple"></span>
        <span class="rounded-full inline-block h-3 w-3 items-center mx-1 bg-grey-lightest"></span>
        <span class="rounded-full inline-block h-3 w-3 items-center mx-1 bg-grey-lightest"></span>
      </div>
    </div>
  </section>

  <section class="flex flex-wrap w-4/5 mx-auto mt-8 px-8 container">
    <div class="w-1/2 mt-8">
      <p class='text-lg font-thin text-grey-card-2'>Past Donations</p>
    </div>
    <div class="flex-1 text-right pr-6 mt-8 mr-6">
      <button class="bg-purple-buttons text-white font-thin py-2 px-4 rounded-full">View All</button>
