<div class="w-6/7">
  <section class="bg-purple-dark h-88">
    <div class="w-4/5 m-auto flex px-8 container">
      <div class="flex-1 mt-8 pt-8">
        <p class="p-1 text-sm text-white font-bold mt-8 pt-3">Welcome back, {{model.first}}!</p>
        <p class="text-2xl text-white font-light pl-1 tracking-wide">This month you're donating <span class='text-purple-light text-3xl'>{{format-currency model.donorRecurringTotal}}</span> <span class="uppercase text-xs">cad</span></p>
        <p class="pl-1 text-white font-black text-2xl mt-1">{{fa-icon 'angle-down'}}</p>
      </div>

      <div class="text-right">
        <nav class="flex items-center justify-between flex-wrap p-6">
          <div class="w-full block flex-grow text-white">
            <div>
              <a class="inline-block mr-6 text-white no-underline align-middle" href="">
                {{fa-icon "search"}}
              </a>
              <a class="inline-block mr-6 text-white no-underline pt-1 align-middle" href="">
                {{fa-icon "bell"}}
              </a>
              <a class="inline-block mr-1  no-underline" href="">
                <img src="/img/icons/account-white.svg" class="w-4 align-middle" />
              </a>
              <a class="inline-block no-underline text-grey font-hairline text-sm align-middle" href="">
                {{model.first}}
              </a>
            </div>
          </div>
        </nav>
      </div>
      <div class="w-1/4">
      </div>
    </div>
  </section>

  <section class="flex flex-wrap w-4/5 px-8 -mt-10 mx-auto container">
    <div class="w-1/2 -mt-8 pl-1">
      <p class='text-lg text-white font-thin'>Active Donations</p>
    </div>
    <div class="flex-1 text-right pr-6 -mt-8 mr-6">
      <button class="bg-purple-buttons text-white font-thin py-2 px-4 rounded-full">View All</button>
    </div>
    <div class="w-1/4">
    </div>
  </section>

  <section class="flex flex-wrap content-start w-4/5 mx-auto mt-8 pt-2 container">

    {{#each model.relationships as |relationship|}}
      {{#each relationship.recurrings as |gift|}}
        {{#link-to 'relationship' relationship.id class='no-underline text-black'}}
          <div class="w-100 rounded-lg overflow-hidden shadow-md -mt-4 mx-2 mb-8 cursor-pointer">
            <div class="image w-full h-48 bg-purple-card-background overflow-hidden">
              <img src={{gift.campaign.image}} class="opacity-80" />
            </div>
            <div class="px-10 py-4">
              <div class="pb-8 border-grey-light border-solid border-b">
                <p class="font-bold text-grey-card mt-4 mb-2 capitalize text-lg">
                  {{gift.campaign.organization.name}}
                </p>
                <p class="font-light text-grey-card">
                  {{gift.campaign.description}}
                </p>
              </div>
              <div class="mt-4 flex">
                <p class="text-2xl font-bold w-1/2 text-grey-card">
                  {{format-currency gift.amount}} <span class="pl-4">{{fa-icon 'angle-down'}}</span>
                </p>
                <span class="w-1/2 text-right font-sm capitalize text-grey-card-2 pt-1">
                  {{gift.frequency}}
                </span>
              </div>
            </div>
          </div>
      {{/link-to}}
      {{/each}}
    {{/each}}
  </section>


  <section class="flex flex-wrap content-start w-4/5 pt-8 mx-auto container">
