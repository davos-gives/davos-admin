<div class="w-3/4">
  <section class="flex bg-grey-darkest h-18">
    <div class="flex-1 p-8 ml-8">
      {{#link-to 'index'}}
        <p class="p-1 text-lg text-white font-bold">{{fa-icon "angle-left"}} {{fa-icon "home"}}</p>
      {{/link-to}}
    </div>
    <div class="flex-1 text-right">
      <nav class="flex items-center justify-between flex-wrap p-6">
        <div class="w-full block flex-grow text-white">
          <div>
            <a class="inline-block mt-4 mr-4 text-white no-underline" href="">
              {{fa-icon "search"}}
            </a>
            <a class="inline-block mt-4 mr-4 text-white no-underline" href="">
              {{fa-icon "bell"}}
            </a>
            <a class="inline-block mt-4 mr-1 text-white no-underline" href="">
              <span class="rounded-full h-6 w-6 flex items-center justify-center bg-white">a</span>
            </a>
            <a class="inline-block mt-4 text-white no-underline" href="">
              {{model.donor.first}}
            </a>
          </div>
        </div>
      </nav>
    </div>
  </section>
  <section class="bg-grey-darkest h-32">
    <div class="flex w-3/4 px-8 ml-8">
      <div class="flex-1">
        <div class="bg-grey-light w-24 h-24 rounded-lg">
          <p class="align-middle text-center pt-8">
            Logo
          </p>
        </div>
      </div>
      <div class="flex-1 border-solid border-white border-r my-3">
        <p class="text-white -mt-2 mb-2 font-thin text-center text-sm">
          Donated this year
        </p>
        <p class="text-white font-semibold text-2xl mb-2 text-center">
          {{format-currency model.totalYearlyPayments}}
        </p>
        <p class="text-white font-hairline text-center text-sm">
          CAD
        </p>
      </div>
      <div class="flex-1 border-white border-r my-3">
        <p class="text-white -mt-2 mb-2 font-thin text-center text-sm">
          You've supported for
        </p>
        <p class="text-white font-semibold text-2xl mb-2 text-center">
          {{moment-from-now (moment-format model.formattedPaymentDate) hideAffix=true}}
        </p>
      </div>
      <div class="flex-1 my-3">
        <p class="text-white -mt-2 mb-2 font-thin text-center text-sm">
          Donated overall
        </p>
        <p class="text-white font-semibold text-2xl mb-2 text-center">
          {{format-currency model.totalDonations}}
        </p>
        <p class="text-white font-hairline text-center text-sm">
          CAD
        </p>
      </div>
    </div>
  </section>

  <section class="flex flex-wrap w-3/4 px-8 ml-8 mt-8">
    <p class="text-xl">
    <span class="font-bold pr-2 capitalize">{{model.organization.name}}</span>| My Active Donations
  </p>
    {{#each model.recurrings as |recurring|}}
      {{recurring-payment recurring=recurring}}
    {{/each}}
  </section>

  <section class="flex flex-wrap content-start w-3/4 px-2 ml-8 pt-8 mb-8">
  </section>



  {{donation-history payments=model.payments}}

  <section class="flex flex-wrap w-3/4 text-xs text-grey-dark ml-8 border-grey-light border-solid border-t-2 pt-8 pb-8">
    <div class="w-1/2">
      <p>Â©2018 Davos.gives - All rights reserved.</p>
    </div>
    <div class="w-1/2 text-right flex">
      <p class="w-1/3">
        Terms of Use
      </p>
      <p class="w-1/3">
        Privacy Policy
      </p>
      <p class="w-1/3">
        Cookie Policy
      </p>
    </div>
  </section>
</div>
