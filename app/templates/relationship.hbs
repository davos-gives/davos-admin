<div class="w-6/7 min-h-screen">
  <section class="bg-purple-dark h-44">
    <div class="w-4/5 m-auto flex px-8 container">
      <div class="flex-1 py-8">
        {{#link-to 'index'}}
          <p class="p-1 text-lg text-white font-bold">{{fa-icon "angle-left"}} {{fa-icon "home"}}</p>
        {{/link-to}}
      </div>

      <div class="text-right">
        <nav class="flex items-center justify-between flex-wrap p-6">
          <div class="w-full block flex-grow text-white">
            <div>
              <a class="inline-block mr-6 text-white no-underline align-middle" href="">
                {{fa-icon "search"}}
              </a>
              <a class="inline-block mr-6 text-white no-underline pt-1 align-middle" href="">
                {{fa-icon "bell"}}
              </a>
              <a class="inline-block mr-1  no-underline" href="">
                <img src="/img/icons/account-white.svg" class="w-4 align-middle" />
              </a>
              <a class="inline-block no-underline text-grey font-hairline text-sm align-middle" href="">
                {{model.donor.first}}
              </a>
            </div>
          </div>
        </nav>
      </div>
      <div class="w-1/4">
      </div>
    </div>
  </section>

  <section class="-mt-10 bg-purple-dark h-40">
    <div class="flex flex-wrap w-4/5 px-4 mx-auto container">
      <div class="flex w-3/4">
        <div class="flex-1">
          <div class="w-44 h-44 rounded-lg overflow-hidden shadow-md -mt-4 mx-2 mb-8">
            <div class="image w-full h-44 bg-white flex items-center">
                <img src="{{model.organization.logo}}" class="w-3/4 mx-auto"/>
            </div>
          </div>
        </div>
        <div class="flex-1 border-solid my-3">
          <p class="text-white font-bold text-sm pb-2 ml-8">You're amazing!</p>
          <p class="text-white mb-2 font-hairline text-lg ml-8">
            Donated this year
          </p>
          <p class="text-white font-semibold text-2xl mb-2 text-center text-purple-light">
            {{format-currency model.totalYearlyPayments}}
          </p>
          <p class="text-white font-hairline text-center text-hairline text-sm">
            CAD
          </p>
        </div>
        <div class="bg-purple-light w-px h-16 mt-10">
        </div>
        <div class="flex-1 my-3">
          <p class="text-white mb-2 font-hairline text-lg mt-6 text-center">
            A supporter for
          </p>
          <p class="text-white font-semibold text-2xl mb-2 text-center text-purple-light">
            {{moment-from-now (moment-format model.formattedPaymentDate) hideAffix=true}}
          </p>
        </div>
        <div class="bg-purple-light w-px h-16 mt-10">
        </div>
        <div class="flex-1 my-3">
          <p class="text-white mb-2 font-hairline text-lg text-center mt-6">
            Donated overall
          </p>
          <p class="text-white font-semibold text-2xl mb-2 text-center text-purple-light">
            {{format-currency model.totalDonations}}
          </p>
          <p class="text-white font-hairline text-center text-sm">
            CAD
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="flex flex-wrap w-4/5 mx-auto mt-8 px-8 container">
        <p class="text-xl mt-8 pt-8 text-grey-card">
      <span class="font-bold pr-2 capitalize text-grey-card">{{model.organization.name}}</span>| My Active Donations
    </p>
    {{#each model.recurrings as |recurring|}}
      {{recurring-payment recurring=recurring cards=model.donor.cards on-save=(action "saveRecurring")}}
    {{/each}}
  </section>

  {{donation-history payments=model.payments}}

  <section class="flex flex-wrap w-4/5 mx-auto text-sm pt-8 pb-8 container">
    <div class="w-1/4 text-grey-dark border-grey-light border-solid border-t text-purple-footer py-8">
      <p><span class='font-bold'>Â©2018 Davos.gives</span> - All rights reserved.</p>
    </div>
    <div class="w-1/4 text-grey-dark text-center border-grey-light border-solid border-t py-7 -py-1">
      <img src="/img/Davos_slogan.svg" class="w-40"/>
    </div>

    <div class="w-1/4 text-right flex text-grey-dark border-grey-light border-solid border-t py-8 text-xs">
      <p class="w-1/3">
        Terms of Use
      </p>
      <p class="w-1/3">
        Privacy Policy
      </p>
      <p class="w-1/3">
        Cookie Policy
      </p>
    </div>
    <div class="w-1/4">
    </div>
  </section>
</div>
